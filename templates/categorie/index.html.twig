{% extends 'baseadmin.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container-fluid py-4">

    <!-- Header et bouton Ajouter -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Catégories</h2>
        <a href="{{ path('app_categorie_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Ajouter
        </a>
    </div>

    <!-- Formulaire de recherche -->
    {% if searchForm is defined %}
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                {{ form_start(searchForm, {'attr': {'class': 'row g-3 align-items-end'}}) }}
                    <div class="col-md-4">{{ form_row(searchForm.nom) }}</div>
                    <div class="col-md-4">{{ form_row(searchForm.produit) }}</div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-search"></i> Rechercher
                        </button>
                    </div>
                    <div class="col-md-2">
                        <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary w-100">
                            <i class="fas fa-times"></i> Réinitialiser
                        </a>
                    </div>
                {{ form_end(searchForm) }}
            </div>
        </div>
    {% endif %}

    <!-- Liste des catégories en cartes -->
    <div class="row g-3">
        {% if categories|length > 0 %}
            {% for categorie in categories %}
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ categorie.nom }}</h5>
                            <p class="card-text">
                                {% set max = 3 %}
                                {% if categorie.produit|length > 0 %}
                                    {% for prod in categorie.produit|slice(0, max) %}
                                        <span class="badge bg-info text-dark">{{ prod.nom }}</span>
                                    {% endfor %}
                                    {% if categorie.produit|length > max %}
                                        <span class="badge bg-secondary">+{{ categorie.produit|length - max }} autres</span>
                                    {% endif %}
                                {% else %}
                                    <em>Aucun produit</em>
                                {% endif %}
                            </p>
                            <div class="mt-auto d-flex justify-content-between">
                                <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-sm btn-info" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form action="{{ path('app_categorie_delete', {'id': categorie.id}) }}" method="post" class="d-inline"
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger"
                                            {% if categorie.produit|length > 0 %}disabled title="Impossible de supprimer - contient des produits"{% endif %}>
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <!-- Pagination -->
            <div class="col-12 d-flex justify-content-center mt-3">
                {{ knp_pagination_render(categories) }}
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center m-3">
                    <i class="fas fa-info-circle"></i> Aucune catégorie trouvée.
                </div>
            </div>
        {% endif %}
    </div>

</div>
{% endblock %}
