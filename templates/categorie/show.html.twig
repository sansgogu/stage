{% extends "baseadmin.html.twig" %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --light-bg: #f8f9fa;
            --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --success: #4cc9f0;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fb;
            color: #333;
            padding-bottom: 2rem;
        }
        
        .page-header {
            background: linear-gradient(120deg, var(--primary), var(--secondary));
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 15px 15px;
        }
        
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: var(--card-shadow);
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
        }
        
        .card-header {
            background: linear-gradient(to right, rgba(67, 97, 238, 0.05), rgba(63, 55, 201, 0.05));
            border-bottom: 1px solid rgba(0,0,0,0.05);
            font-weight: 600;
            padding: 1.2rem 1.5rem;
            border-radius: 12px 12px 0 0 !important;
            color: var(--primary);
        }
        
        .detail-card {
            transition: transform 0.3s;
        }
        
        .detail-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
        }
        
        .info-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            background: linear-gradient(45deg, var(--primary), var(--secondary));
            color: white;
            margin-right: 15px;
        }
        
        .stats-card {
            text-align: center;
            padding: 1.5rem;
        }
        
        .stats-card .number {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--primary);
            margin: 10px 0;
        }
        
        .stats-card .label {
            color: #718096;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .stats-card .icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            font-size: 1.8rem;
            background-color: rgba(67, 97, 238, 0.1);
            color: var(--primary);
        }
        
        .product-img {
            width: 70px;
            height: 70px;
            border-radius: 8px;
            object-fit: cover;
            transition: transform 0.3s;
        }
        
        .product-img:hover {
            transform: scale(1.1);
        }
        
        .action-btn {
            width: 35px;
            height: 35px;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-right: 5px;
            transition: all 0.3s;
        }
        
        .action-btn:hover {
            transform: translateY(-3px);
        }
        
        .btn-primary {
            background: linear-gradient(45deg, var(--primary), var(--secondary));
            border: none;
            border-radius: 8px;
            padding: 12px 25px;
            font-weight: 500;
            transition: all 0.3s;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(67, 97, 238, 0.3);
        }
        
        .btn-outline-primary {
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 500;
            border-color: var(--primary);
            color: var(--primary);
        }
        
        .btn-outline-primary:hover {
            background-color: var(--primary);
            color: white;
        }
        
        .table th {
            border-top: none;
            font-weight: 600;
            background: linear-gradient(to right, rgba(67, 97, 238, 0.05), rgba(63, 55, 201, 0.05));
            color: var(--primary);
            padding: 1rem;
        }
        
        .table td {
            padding: 1rem;
            vertical-align: middle;
        }
        
        .table tbody tr {
            transition: all 0.3s;
        }
        
        .table tbody tr:hover {
            background-color: rgba(67, 97, 238, 0.03);
            transform: translateX(5px);
        }
        
        .back-link {
            color: white;
            text-decoration: none;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            padding: 8px 16px;
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            transition: all 0.3s;
        }
        
        .back-link:hover {
            color: white;
            background-color: rgba(255, 255, 255, 0.3);
            transform: translateX(-3px);
        }
        
        .empty-state {
            text-align: center;
            padding: 3rem;
            color: #6c757d;
        }
        
        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            color: #dee2e6;
        }
        
        .badge-primary {
            background: linear-gradient(45deg, var(--primary), var(--secondary));
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 500;
        }
        
        .chart-container {
            height: 250px;
            position: relative;
        }
        
        .product-actions {
            opacity: 0;
            transition: opacity 0.3s;
        }
        
        tr:hover .product-actions {
            opacity: 1;
        }
        
        @media (max-width: 768px) {
            .stats-card .number {
                font-size: 1.8rem;
            }
            
            .info-icon {
                width: 40px;
                height: 40px;
                font-size: 1.2rem;
                margin-right: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0"><i class="bi bi-tag me-2"></i>Category Details</h1>
                    <p class="mb-0 opacity-75">Manage and view details of your product category</p>
                </div>
                <a href="{{ path('app_categorie_index') }}" class="back-link">
                    <i class="bi bi-arrow-left me-2"></i> Back to list
                </a>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Stats Cards -->
        <div class="row">
            <div class="col-md-4">
                <div class="card stats-card">
                    <div class="icon">
                        <i class="bi bi-box-seam"></i>
                    </div>
                    <div class="number">{{ categorie.produit|length }}</div>
                    <div class="label">Total Products</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stats-card">
                    <div class="icon">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="number">
                        {% set totalValue = 0 %}
                        {% for produit in categorie.produit %}
                            {% set totalValue = totalValue + produit.prix %}
                        {% endfor %}
                        ${{ totalValue|number_format(2) }}
                    </div>
                    <div class="label">Total Value</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stats-card">
                    <div class="icon">
                        <i class="bi bi-star"></i>
                    </div>
                    <div class="number">4.8</div>
                    <div class="label">Avg Rating</div>
                </div>
            </div>
        </div>

        <!-- Category Information Card -->
        <div class="card detail-card">
            <div class="card-header d-flex align-items-center">
                <i class="bi bi-info-circle me-2"></i> Category Information
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-4">
                            <div class="info-icon">
                                <i class="bi bi-key"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 text-muted">ID</h6>
                                <p class="mb-0 fw-bold">{{ categorie.id }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-4">
                            <div class="info-icon">
                                <i class="bi bi-tag"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 text-muted">Name</h6>
                                <p class="mb-0 fw-bold">{{ categorie.nom }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex mt-4 flex-wrap">
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-primary me-3 mb-2">
                        <i class="bi bi-pencil me-2"></i> Edit Category
                    </a>
                    <button class="btn btn-outline-primary me-3 mb-2">
                        <i class="bi bi-archive me-2"></i> Export Data
                    </button>
                    {{ include('categorie/_delete_form.html.twig') }}
                </div>
            </div>
        </div>

        <!-- Products in Category Card -->
        <div class="card">
            <div class="card-header d-flex align-items-center justify-content-between">
                <div>
                    <i class="bi bi-grid me-2"></i> Products in this Category
                    <span class="badge-primary ms-2">{{ categorie.produit|length }} products</span>
                </div>
                <a href="#" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-plus-circle me-1"></i> Add Product
                </a>
            </div>
            <div class="card-body p-0">
                {% if categorie.produit|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Code</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for produit in categorie.produit %}
                                <tr>
                                    <td class="fw-medium">#{{ produit.id }}</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="{{ asset('image_de_produit/' ~ produit.image) }}" class="product-img me-3" alt="{{ produit.titre }}">
                                            <div>
                                                <div class="fw-bold">{{ produit.titre }}</div>
                                                <small class="text-muted">{{ produit.soustitre }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="fw-bold">${{ produit.prix }}</td>
                                    <td>{{ produit.code }}</td>
                                    <td>
                                        <span class="badge bg-success">In Stock</span>
                                    </td>
                                    <td>
                                        <div class="product-actions">
                                            <a href="#" class="btn btn-sm btn-outline-primary action-btn me-1" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-outline-secondary action-btn me-1" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-outline-danger action-btn" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="empty-state">
                        <i class="bi bi-inbox"></i>
                        <h4>No products found</h4>
                        <p class="text-muted">There are no products in this category yet.</p>
                        <a href="#" class="btn btn-primary mt-3">
                            <i class="bi bi-plus-circle me-2"></i> Add First Product
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Activity Timeline Card -->
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <i class="bi bi-clock-history me-2"></i> Recent Activity
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-plus-circle-fill text-success me-2"></i>
                            <span>Category created</span>
                        </div>
                        <small class="text-muted">2 days ago</small>
                    </li>
                    <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-pencil-fill text-primary me-2"></i>
                            <span>Category updated</span>
                        </div>
                        <small class="text-muted">1 day ago</small>
                    </li>
                    <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-cart-plus-fill text-info me-2"></i>
                            <span>5 products added</span>
                        </div>
                        <small class="text-muted">12 hours ago</small>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Add animation to stats cards
        document.addEventListener('DOMContentLoaded', function() {
            const statsCards = document.querySelectorAll('.stats-card');
            statsCards.forEach(card => {
                card.addEventListener('mouseenter', () => {
                    card.style.transform = 'translateY(-8px)';
                });
                card.addEventListener('mouseleave', () => {
                    card.style.transform = 'translateY(0)';
                });
            });
            
            // Animate numbers in stats cards
            const numberElements = document.querySelectorAll('.stats-card .number');
            numberElements.forEach(element => {
                const originalText = element.textContent;
                element.textContent = '0';
                
                let counter = 0;
                const target = originalText.replace(/\D/g, '');
                const duration = 2000;
                const increment = target / (duration / 16);
                
                const updateNumber = () => {
                    if (counter < target) {
                        counter += increment;
                        element.textContent = Math.round(counter);
                        setTimeout(updateNumber, 16);
                    } else {
                        element.textContent = originalText;
                    }
                };
                
                setTimeout(updateNumber, 500);
            });
        });
    </script>
</body>
</html>
{% endblock %}