 
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true, 'id': 'categorie-form'}}) }}
                        
                        {% for field in form %}
                            {% if field.vars.name != '_token' %}
                                <div class="mb-3">
                                    {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(field, {'attr': {'class': 'invalid-feedback'}}) }}
                                </div>
                            {% endif %}
                        {% endfor %}
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_categorie_index') }}" class="btn back-btn">
                                <i class="bi bi-arrow-left me-1"></i> Back to list
                            </a>
                            <button type="submit" class="btn btn-gradient">
                                <i class="bi bi-check-lg me-1"></i> {{ button_label|default('Save') }}
                            </button>
                        </div>
                        
                        {{ form_end(form) }}
                 