<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Category - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .card {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border: none;
            border-radius: 0.75rem;
        }
        .card-header {
            background: linear-gradient(45deg, #4e73df, #224abe);
            color: white;
            border-radius: 0.75rem 0.75rem 0 0 !important;
        }
        .btn-gradient {
            background: linear-gradient(45deg, #4e73df, #224abe);
            border: none;
            color: white;
        }
        .btn-gradient:hover {
            background: linear-gradient(45deg, #224abe, #4e73df);
            color: white;
        }
        .back-btn {
            background: linear-gradient(45deg, #6c757d, #4a5056);
            border: none;
            color: white;
        }
        .back-btn:hover {
            background: linear-gradient(45deg, #4a5056, #6c757d);
            color: white;
        }
        .form-label {
            font-weight: 500;
        }
        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.25);
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header py-3">
                        <h5 class="card-title mb-0"><i class="bi bi-tag-fill me-2"></i>Create New Category</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true, 'id': 'categorie-form'}}) }}
                        
                        {% for field in form %}
                            {% if field.vars.name != '_token' %}
                                <div class="mb-3">
                                    {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(field, {'attr': {'class': 'invalid-feedback'}}) }}
                                </div>
                            {% endif %}
                        {% endfor %}
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_categorie_index') }}" class="btn back-btn">
                                <i class="bi bi-arrow-left me-1"></i> Back to list
                            </a>
                            <button type="submit" class="btn btn-gradient">
                                <i class="bi bi-check-lg me-1"></i> {{ button_label|default('Save') }}
                            </button>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
</body>
</html>