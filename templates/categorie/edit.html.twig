{% extends "baseadmin.html.twig" %}

 
{% block body %}
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Category</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --light-bg: #f8f9fa;
            --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fb;
            color: #333;
        }
        
        .page-header {
            background: linear-gradient(120deg, var(--primary), var(--secondary));
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 15px 15px;
        }
        
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: var(--card-shadow);
            margin-bottom: 1.5rem;
        }
        
        .card-header {
            background: linear-gradient(to right, rgba(67, 97, 238, 0.05), rgba(63, 55, 201, 0.05));
            border-bottom: 1px solid rgba(0,0,0,0.05);
            font-weight: 600;
            padding: 1.2rem 1.5rem;
            border-radius: 12px 12px 0 0 !important;
            color: var(--primary);
        }
        
        .form-control, .form-select {
            border-radius: 8px;
            padding: 12px 15px;
            border: 1px solid #e2e8f0;
            transition: all 0.3s;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.15);
        }
        
        .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: #2d3748;
        }
        
        .btn-primary {
            background: linear-gradient(45deg, var(--primary), var(--secondary));
            border: none;
            border-radius: 8px;
            padding: 12px 25px;
            font-weight: 500;
            transition: all 0.3s;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(67, 97, 238, 0.3);
        }
        
        .btn-outline-secondary {
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 500;
        }
        
        .back-link {
            color: white;
            text-decoration: none;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            padding: 8px 16px;
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            transition: all 0.3s;
        }
        
        .back-link:hover {
            color: white;
            background-color: rgba(255, 255, 255, 0.3);
            transform: translateX(-3px);
        }
        
        .category-icon {
            width: 80px;
            height: 80px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            background: linear-gradient(45deg, var(--primary), var(--secondary));
            color: white;
            margin: 0 auto 1.5rem;
        }
        
        .required-field::after {
            content: "*";
            color: #e53e3e;
            margin-left: 4px;
        }
        
        .action-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }
        
        .delete-form {
            display: inline;
        }
    </style>
</head>
<body>
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Category</h1>
                    <p class="mb-0 opacity-75">Update your category information</p>
                </div>
                <a href="{{ path('app_categorie_index') }}" class="back-link">
                    <i class="bi bi-arrow-left me-2"></i> Back to list
                </a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Category Edit Card -->
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <i class="bi bi-tag me-2"></i> Category Details
                    </div>
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <div class="category-icon">
                                <i class="bi bi-tag"></i>
                            </div>
                            <h5>Editing: {{ categorie.nom }}</h5>
                        </div>
                        
                        {{ include('categorie/_form.html.twig', {'button_label': 'Update'}) }}
                    </div>
                </div>
                
                <!-- Danger Zone Card -->
                <div class="card border-danger">
                    <div class="card-header text-white bg-danger d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle me-2"></i> Danger Zone
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-danger">Delete this category</h5>
                        <p class="card-text">Once you delete a category, there is no going back. Please be certain.</p>
                        
                        <div class="action-buttons mt-3">
                            {{ include('categorie/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
                
                <!-- Form Tips Card -->
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <i class="bi bi-lightbulb me-2"></i> Form Tips
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6><i class="bi bi-check-circle text-success me-2"></i> Required Fields</h6>
                                <p class="text-muted small">Fields marked with an asterisk (<span class="text-danger">*</span>) are required.</p>
                            </div>
                            <div class="col-md-6">
                                <h6><i class="bi bi-info-circle text-primary me-2"></i> Category Names</h6>
                                <p class="text-muted small">Use descriptive names that help users find products easily.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add required field indicators
            const labels = document.querySelectorAll('label');
            labels.forEach(label => {
                const input = document.getElementById(label.getAttribute('for'));
                if (input && input.hasAttribute('required')) {
                    label.classList.add('required-field');
                }
            });
            
            // Enhance delete button
            const deleteButton = document.querySelector('.delete-form button');
            if (deleteButton) {
                deleteButton.classList.add('btn', 'btn-outline-danger');
                deleteButton.innerHTML = '<i class="bi bi-trash me-2"></i> Delete Category';
            }
            
            // Add confirmation to delete button
            const deleteForm = document.querySelector('.delete-form');
            if (deleteForm) {
                deleteForm.onsubmit = function() {
                    return confirm('Are you sure you want to delete this category? This action cannot be undone.');
                };
            }
        });
    </script>
</body>
</html>
{% endblock %}
