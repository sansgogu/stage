{% extends "baseadmin.html.twig" %}


{% block body %}
    


    <!-- Main Content -->
    <main class="container mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header py-3">
                        <h5 class="card-title mb-0"><i class="bi bi-person-plus me-2"></i>Create New Client</h5>
                    </div>
                    <div class="card-body">
                        <!-- Step Progress -->
                       
                        
                        <!-- Form -->
                        {{ include('client_pro/_form.html.twig') }}
                        
                        <!-- Help Text -->
                        <div class="mt-4">
                            <div class="alert alert-info">
                                <h6><i class="bi bi-info-circle me-2"></i>Need help?</h6>
                                <p class="mb-0">Ensure all required fields (marked with *) are filled out correctly. For assistance, contact our support team.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


    <!-- Bootstrap & JavaScript Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Form Enhancement Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add required field indicators
            const labels = document.querySelectorAll('label');
            labels.forEach(label => {
                if (label.textContent.includes('Nomclient') || 
                    label.textContent.includes('Matriculefiscale') ||
                    label.textContent.includes('Tlfn')) {
                    label.classList.add('required-field');
                }
            });
            
            // Enhance form controls with Bootstrap styling
            const inputs = document.querySelectorAll('input, textarea, select');
            inputs.forEach(input => {
                if (!input.classList.contains('btn')) {
                    input.classList.add('form-control');
                }
            });
            
            // Style the submit button
            const submitButton = document.querySelector('button[type="submit"]');
            if (submitButton) {
                submitButton.classList.add('btn', 'btn-primary', 'me-2');
                submitButton.innerHTML = '<i class="bi bi-check-circle me-2"></i>Create Client';
            }
            
            // Style the back link as a button
            const backLink = document.querySelector('a[href*="app_client_pro_index"]');
            if (backLink && !backLink.classList.contains('btn')) {
                backLink.classList.add('btn', 'btn-outline-secondary');
                backLink.innerHTML = '<i class="bi bi-arrow-left me-2"></i>Back to List';
            }
        });
    </script>
</body>
</html>
{% endblock %}
