{% extends "baseadmin.html.twig" %}
{% block body %}

<body>
    <!-- Header Section -->
  

   
        <!-- Clients Table -->
        <div class="card">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0"><i class="bi bi-table me-2"></i>Client List</h5>
            </div>
            <div class="card-body">
                <div class="table-container">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID <i class="bi bi-arrow-down"></i></th>
                                <th>Client Name</th>
                                <th>Tax ID</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for client_pro in client_pros %}
                            <tr>
                                <td><strong>#{{ client_pro.id }}</strong></td>
                                <td>{{ client_pro.nomclient }}</td>
                                <td>{{ client_pro.matriculefiscale }}</td>
                                <td>{{ client_pro.adresse }}</td>
                                <td>{{ client_pro.tlfn }}</td>
                                <td class="action-buttons">
                                    <a href="{{ path('app_client_pro_show', {'id': client_pro.id}) }}" class="btn btn-sm btn-info" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_client_pro_edit', {'id': client_pro.id}) }}" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">
                                    <div class="empty-state">
                                        <i class="bi bi-inbox"></i>
                                        <h4>No clients found</h4>
                                        <p>Get started by adding your first client</p>
                                        <a href="{{ path('app_client_pro_new') }}" class="btn btn-primary mt-2">
                                            <i class="bi bi-plus-circle me-2"></i>Add Client
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                
              
    <!-- Footer -->
    

    <!-- Bootstrap & JavaScript Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{% endblock %}
