
{% extends "baseadmin.html.twig" %}
{% block body %}

<body>
    <!-- Header Section -->
    <header class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0"><i class="bi bi-people-fill me-2"></i>User Management</h1>
                    <p class="mb-0 opacity-75">Manage system users and permissions</p>
                </div>
                <a href="{{ path('app_user_new') }}" class="btn btn-light">
                    <i class="bi bi-plus-circle me-2"></i> Create New User
                </a>
            </div>
        </div>
    </header>

   
         
     

        <!-- Search and Filter Card -->
        <div class="card">
            <div class="card-header">
                <div>
                    <i class="bi bi-search me-2"></i> Search and Filters
                </div>
            </div>
            <div class="card-body">
                <form method="get" action="{{ path('app_user_index') }}">
                    <div class="row">
                        <div class="col-md-8 mb-3 mb-md-0">
                            <div class="search-bar">
                                <i class="bi bi-search"></i>
                                <input type="text" name="search" class="form-control" placeholder="Search by name, email..." value="{{ app.request.query.get('search') }}">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex">
                                <select class="form-select me-2" name="filter">
                                    <option value="">All Users</option>
                                    <option value="verified" {{ app.request.query.get('filter') == 'verified' ? 'selected' : '' }}>Verified Only</option>
                                    <option value="unverified" {{ app.request.query.get('filter') == 'unverified' ? 'selected' : '' }}>Unverified Only</option>
                                    <option value="admin" {{ app.request.query.get('filter') == 'admin' ? 'selected' : '' }}>Admins Only</option>
                                </select>
                                <button class="btn btn-primary" type="submit">
                                    <i class="bi bi-filter me-1"></i> Apply
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Users Table Card -->
        <div class="card">
            <div class="card-header">
                <div>
                    <i class="bi bi-table me-2"></i> Users List
                    <span class="badge-primary ms-2">{{ users is iterable ? users|length : 0 }}</span>
                </div>
                <div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="compactView">
                        <label class="form-check-label" for="compactView">Compact view</label>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                {% if users is defined and users is not empty %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="usersTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>User</th>
                                    <th>Email</th>
                                    <th>Bio</th>
                                    <th>Roles</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td class="fw-medium">#{{ user.id }}</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="user-icon">
                                                {{ user.prenom|first|upper }}{{ user.nom|first|upper }}
                                            </div>
                                            <div>
                                                <div class="fw-bold">{{ user.prenom }} {{ user.nom }}</div>
                                                <small class="text-muted">Joined {{ "now"|date("M Y") }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        {% if user.bio %}
                                            <span class="d-inline-block text-truncate" style="max-width: 150px;" title="{{ user.bio }}">
                                                {{ user.bio }}
                                            </span>
                                        {% else %}
                                            <span class="text-muted">No bio</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% for role in user.roles %}
                                            {% if role == 'ROLE_ADMIN' %}
                                                <span class="badge bg-primary role-badge">Admin</span>
                                            {% elseif role == 'ROLE_USER' %}
                                                <span class="badge bg-secondary role-badge">User</span>
                                            {% else %}
                                                <span class="badge bg-light text-dark role-badge">{{ role }}</span>
                                            {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% if user.isVerified %}
                                            <span class="badge verified-badge">Verified</span>
                                        {% else %}
                                            <span class="badge unverified-badge">Unverified</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary action-btn me-2" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary action-btn me-2" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-info action-btn" title="View Password" data-bs-toggle="tooltip" data-bs-title="Password is encrypted for security">
                                                <i class="bi bi-key"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                  
                    </div>
                {% else %}
                    <div class="empty-state">
                        <i class="bi bi-people"></i>
                        <h4>No users found</h4>
                        <p class="text-muted">Get started by creating your first user</p>
                        <a href="{{ path('app_user_new') }}" class="btn btn-primary mt-3">
                            <i class="bi bi-plus-circle me-2"></i> Create New User
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    
   
</body>
</html>
{% endblock %}