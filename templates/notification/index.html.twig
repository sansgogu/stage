{% extends "baseadmin.html.twig" %}

{% block body %}
<div class="container-fluid px-4">
    <!-- Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center">
            <div class="bg-primary rounded-circle p-3 me-3">
                <i class="fas fa-bell text-white fa-2x"></i>
            </div>
            <div>
                <h1 class="h3 mb-0 text-gray-800">Gestion des Notifications</h1>
                <p class="text-muted mb-0">Consultez et gérez toutes vos notifications</p>
            </div>
        </div>
        <a href="{{ path('app_notification_new') }}" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Nouvelle Notification</span>
        </a>
    </div>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Tableau de bord</a></li>
            <li class="breadcrumb-item active" aria-current="page">Notifications</li>
        </ol>
    </nav>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Notifications</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ notifications|length }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-bell fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Notifications Lues</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Non Lues</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">5</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Cette Semaine</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">8</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter and Actions Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-filter me-2"></i>Filtres et Actions
            </h6>
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="actionsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-cog me-1"></i> Actions
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="actionsDropdown">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-check me-2"></i> Marquer comme lues</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-trash me-2"></i> Supprimer sélection</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-download me-2"></i> Exporter</a></li>
                </ul>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" placeholder="Rechercher une notification..." id="searchInput">
                        <button class="btn btn-outline-primary" type="button" id="searchButton">Rechercher</button>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex">
                        <select class="form-select me-2" id="sortSelect">
                            <option value="">Trier par</option>
                            <option value="newest">Plus récent</option>
                            <option value="oldest">Plus ancien</option>
                            <option value="unread">Non lues</option>
                            <option value="read">Lues</option>
                        </select>
                        <button class="btn btn-outline-secondary" id="refreshButton">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Notifications Table Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-list me-2"></i>Liste des Notifications
            </h6>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="compactView">
                <label class="form-check-label small" for="compactView">Vue compacte</label>
            </div>
        </div>
        <div class="card-body">
            {% if notifications is defined and notifications is not empty %}
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="notificationsTable" width="100%" cellspacing="0">
                        <thead class="table-light">
                            <tr>
                                <th width="50px">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="selectAll">
                                    </div>
                                </th>
                                <th width="80px">ID</th>
                                <th>Type</th>
                                <th>Message</th>
                                <th width="120px">Date</th>
                                <th width="100px">Statut</th>
                                <th width="180px" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for notification in notifications %}
                            <tr class="{% if loop.index <= 5 %}table-primary{% endif %}">
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input row-checkbox" type="checkbox" value="{{ notification.id }}">
                                    </div>
                                </td>
                                <td><span class="badge bg-secondary">#{{ notification.id }}</span></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary rounded-circle p-2 me-3">
                                            <i class="fas fa-info-circle text-white"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">Information</div>
                                            <small class="text-muted">Système</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="notification-preview">
                                        <div class="fw-bold">Notification importante</div>
                                        <small class="text-muted">Message de prévisualisation de la notification...</small>
                                    </div>
                                </td>
                                <td>12/06/2023</td>
                                <td>
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle me-1"></i> Lue
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('app_notification_show', {'id': notification.id}) }}" 
                                           class="btn btn-info btn-circle" 
                                           title="Voir détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_notification_edit', {'id': notification.id}) }}" 
                                           class="btn btn-warning btn-circle" 
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" 
                                              action="{{ path('app_notification_delete', {'id': notification.id}) }}" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette notification?');"
                                              class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ notification.id) }}">
                                            <button class="btn btn-danger btn-circle" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Précédent</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Suivant</a>
                        </li>
                    </ul>
                </nav>
            {% else %}
                <div class="text-center py-5">
                    <div class="py-5">
                        <i class="fas fa-bell-slash fa-4x text-gray-300 mb-3"></i>
                        <h4 class="text-gray-800">Aucune notification</h4>
                        <p class="text-muted mb-4">Vous n'avez aucune notification pour le moment.</p>
                        <a href="{{ path('app_notification_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i> Créer une notification
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Select all functionality
        const selectAll = document.getElementById('selectAll');
        const rowCheckboxes = document.querySelectorAll('.row-checkbox');
        
        selectAll.addEventListener('change', function() {
            rowCheckboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
        });

        // Compact view toggle
        const compactView = document.getElementById('compactView');
        compactView.addEventListener('change', function() {
            const table = document.getElementById('notificationsTable');
            if (this.checked) {
                table.classList.add('table-sm');
            } else {
                table.classList.remove('table-sm');
            }
        });

        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const searchButton = document.getElementById('searchButton');
        
        searchButton.addEventListener('click', function() {
            alert('Fonctionnalité de recherche à implémenter');
        });

        // Refresh button
        const refreshButton = document.getElementById('refreshButton');
        refreshButton.addEventListener('click', function() {
            this.classList.add('fa-spin');
            setTimeout(() => {
                this.classList.remove('fa-spin');
            }, 1000);
        });

        // Tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
        const tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>

<style>
    .btn-circle {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 2px;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(78, 115, 223, 0.05);
    }
    
    .border-left-primary {
        border-left: 4px solid #4e73df !important;
    }
    
    .border-left-success {
        border-left: 4px solid #1cc88a !important;
    }
    
    .border-left-warning {
        border-left: 4px solid #f6c23e !important;
    }
    
    .border-left-info {
        border-left: 4px solid #36b9cc !important;
    }
    
    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    .breadcrumb {
        background-color: #f8f9fc;
        border-radius: 10px;
        padding: 0.75rem 1rem;
    }
    
    .notification-preview {
        max-width: 300px;
    }
    
    .fa-spin {
        animation: fa-spin 1s infinite linear;
    }
</style>
{% endblock %}