{% extends 'baseadmin.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
<main class="main-content mt-0 ps">
  <section>
    <div class="page-header min-vh-100 d-flex align-items-center">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xl-4 col-lg-5 col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
              <div class="card-header text-center bg-gradient-info text-white py-4">
                <h3 class="font-weight-bolder mb-1">Welcome Back ðŸ‘‹</h3>
                <p class="mb-0 small">Sign in with your credentials</p>
              </div>

              <div class="card-body px-4 py-5">
                <form method="post">
                  {% if error %}
                    <div class="alert alert-danger text-center">
                      {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                  {% endif %}

                  <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <div class="input-group">
                      <span class="input-group-text"><i class="ni ni-email-83 text-info"></i></span>
                      <input 
                        type="email" 
                        value="{{ last_username }}" 
                        name="email" 
                        id="inputEmail" 
                        class="form-control" 
                        placeholder="Enter your email"
                        autocomplete="email" 
                        required 
                        autofocus
                      >
                    </div>
                  </div>

                  <div class="mb-3">
                    <label for="inputPassword" class="form-label">Password</label>
                    <div class="input-group">
                      <span class="input-group-text"><i class="ni ni-lock-circle-open text-info"></i></span>
                      <input 
                        type="password" 
                        name="password" 
                        id="inputPassword" 
                        class="form-control" 
                        placeholder="Enter your password"
                        autocomplete="current-password" 
                        required
                      >
                    </div>
                  </div>

                  <div class="d-flex justify-content-between align-items-center mb-4">
                    <a href="#" class="text-sm text-info">Forgot Password?</a>
                  </div>

                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                  <div class="d-grid">
                    <button type="submit" class="btn btn-info btn-lg btn-block text-uppercase fw-bold">
                      Sign In
                    </button>
                  </div>
                </form>
              </div>

              <div class="card-footer text-center bg-light py-3">
                <p class="mb-0 small">
                  Don't have an account?
                  <a href="{{ path('app_register') }}" class="fw-bold text-info">Sign Up</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
{% endblock %}
