    <!-- Background amélioré avec dégradé -->
    <div class="absolute w-full gradient-bg dark:hidden min-h-75"></div>

    <!-- NAVBAR -->
    {% include '_navbarfront.html.twig' %}

    <!-- CONTENU PRINCIPAL AMÉLIORÉ -->
