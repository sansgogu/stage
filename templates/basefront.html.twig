    </main>

    <!-- Bouton de retour en haut -->
    <button id scroll-to-top-button class="fixed hidden p-3 text-white bg-blue-600 rounded-full shadow-lg bottom-8 right-8 hover:bg-blue-700 smooth-transition">
        <i class="fas fa-arrow-up"></i>
    </button>

    <!-- Scripts -->
    <script src="{{ asset('assets1/js/plugins/chartjs.min.js') }}" async></script>
    <script src="{{ asset('assets1/js/plugins/perfect-scrollbar.min.js') }}" async></script>
    <script src="{{ asset('assets1/js/argon-dashboard-tailwind.js?v=1.0.1') }}" async></script>
    
    <!-- Scripts d'amélioration -->
    <script>
        // Script pour gérer l'année du copyright
        document.getElementById('get-current-year').innerText = new Date().getFullYear();
        
        // Script pour le bouton de retour en haut
        const scrollToTopButton = document.getElementById('scroll-to-top-button');
        
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                scrollToTopButton.classList.remove('hidden');
            } else {
                scrollToTopButton.classList.add('hidden');
            }
        });
        
        scrollToTopButton.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
        
        // Animation d'entrée des éléments
        document.addEventListener('DOMContentLoaded', () => {
            const animatedElements = document.querySelectorAll('.animate-fade-in-up');
            
            animatedElements.forEach((element, index) => {
                // Délai progressif pour un effet d'animation en cascade
                element.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
    
    {% block javascripts %}{% endblock %}
