
{% extends "baseadmin.html.twig" %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice Line Items Management</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --success: #4cc9f0;
            --light-bg: #f8f9fa;
            --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --gradient: linear-gradient(120deg, var(--primary), var(--secondary));
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fb;
            color: #333;
        }
        
        .dashboard-header {
            background: var(--gradient);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 15px 15px;
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.15);
        }
        
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: var(--card-shadow);
            margin-bottom: 1.5rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }
        
        .card-header {
            background: white;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            font-weight: 600;
            padding: 1.2rem 1.5rem;
            border-radius: 12px 12px 0 0 !important;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .stats-card {
            text-align: center;
            padding: 1.5rem;
            cursor: pointer;
        }
        
        .stats-card .number {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--primary);
            margin: 10px 0;
        }
        
        .stats-card .label {
            color: #718096;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .stats-card .icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            font-size: 1.8rem;
            background-color: rgba(67, 97, 238, 0.1);
            color: var(--primary);
        }
        
        .table th {
            border-top: none;
            font-weight: 600;
            background: linear-gradient(to right, rgba(67, 97, 238, 0.05), rgba(63, 55, 201, 0.05));
            color: var(--primary);
            padding: 1rem;
        }
        
        .table td {
            padding: 1rem;
            vertical-align: middle;
        }
        
        .table tbody tr {
            transition: all 0.3s;
        }
        
        .table tbody tr:hover {
            background-color: rgba(67, 97, 238, 0.03);
            transform: scale(1.01);
        }
        
        .btn-primary {
            background: var(--gradient);
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 500;
            transition: all 0.3s;
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.2);
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(67, 97, 238, 0.3);
        }
        
        .action-btn {
            width: 35px;
            height: 35px;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-right: 5px;
            transition: all 0.3s;
        }
        
        .action-btn:hover {
            transform: translateY(-3px);
        }
        
        .badge-primary {
            background: var(--gradient);
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 500;
        }
        
        .search-bar {
            position: relative;
            max-width: 300px;
        }
        
        .search-bar input {
            border-radius: 50px;
            padding-left: 45px;
            background-color: var(--light-bg);
            border: 1px solid #e2e8f0;
            transition: all 0.3s;
        }
        
        .search-bar input:focus {
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.2);
            border-color: var(--primary);
        }
        
        .search-bar i {
            position: absolute;
            left: 15px;
            top: 10px;
            color: #718096;
        }
        
        .empty-state {
            text-align: center;
            padding: 3rem;
            color: #6c757d;
        }
        
        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            color: #dee2e6;
        }
        
        .pagination {
            margin: 0;
        }
        
        .page-item.active .page-link {
            background: var(--gradient);
            border-color: var(--primary);
        }
        
        .price-cell {
            font-weight: 600;
            color: var(--primary);
        }
        
        .actions-cell {
            min-width: 120px;
        }
        
        @media (max-width: 768px) {
            .stats-card .number {
                font-size: 1.8rem;
            }
            
            .card-header {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .search-bar {
                margin-top: 1rem;
                max-width: 100%;
            }
            
            .table-responsive {
                border-radius: 0 0 12px 12px;
            }
        }
    </style>
</head>
<body>
    <!-- Header Section -->
    <header class="dashboard-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0"><i class="bi bi-receipt me-2"></i>Invoice Line Items</h1>
                    <p class="mb-0 opacity-75">Manage your invoice line items</p>
                </div>
                <a href="{{ path('app_lignefacture_new') }}" class="btn btn-light">
                    <i class="bi bi-plus-circle me-2"></i> Create New
                </a>
            </div>
        </div>
    </header>

    <div class="container">
        <!-- Stats Cards -->
        <div class="row">
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="icon">
                        <i class="bi bi-list-check"></i>
                    </div>
                    <div class="number">{{ lignefactures|length }}</div>
                    <div class="label">Total Items</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="icon">
                        <i class="bi bi-box"></i>
                    </div>
                    <div class="number">
                        {% set totalQty = 0 %}
                        {% for lignefacture in lignefactures %}
                            {% set totalQty = totalQty + lignefacture.qte %}
                        {% endfor %}
                        {{ totalQty }}
                    </div>
                    <div class="label">Total Quantity</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="icon">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="number">
                        {% set totalValue = 0 %}
                        {% for lignefacture in lignefactures %}
                            {% set totalValue = totalValue + lignefacture.prixtotale %}
                        {% endfor %}
                        ${{ totalValue|number_format(2, '.', ',') }}
                    </div>
                    <div class="label">Total Value</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card">
                    <div class="icon">
                        <i class="bi bi-cart"></i>
                    </div>
                    <div class="number">
                        {% if lignefactures|length > 0 %}
                            {{ (totalValue / lignefactures|length)|number_format(2, '.', ',') }}
                        {% else %}
                            0.00
                        {% endif %}
                    </div>
                    <div class="label">Avg. Item Value</div>
                </div>
            </div>
        </div>

        <!-- Line Items Table Card -->
        <div class="card">
            <div class="card-header">
                <div>
                    <i class="bi bi-table me-2"></i> All Line Items
                    <span class="badge-primary ms-2">{{ lignefactures|length }}</span>
                </div>
                <div class="search-bar">
                    <i class="bi bi-search"></i>
                    <input type="text" class="form-control" placeholder="Search items...">
                </div>
            </div>
            <div class="card-body p-0">
                {% if lignefactures|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Product Reference</th>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Total Price</th>
                                    <th class="actions-cell">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for lignefacture in lignefactures %}
                                <tr>
                                    <td class="fw-medium">#{{ lignefacture.id }}</td>
                                    <td>{{ lignefacture.referencedeproduit }}</td>
                                    <td>{{ lignefacture.nomDeProduit }}</td>
                                    <td>{{ lignefacture.qte }}</td>
                                    <td class="price-cell">${{ lignefacture.prixunitaire|number_format(2, '.', ',') }}</td>
                                    <td class="price-cell">${{ lignefacture.prixtotale|number_format(2, '.', ',') }}</td>
                                    <td>
                                        <div class="d-flex">
                                            <a href="{{ path('app_lignefacture_show', {'id': lignefacture.id}) }}" class="btn btn-sm btn-outline-primary action-btn me-2" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_lignefacture_edit', {'id': lignefacture.id}) }}" class="btn btn-sm btn-outline-secondary action-btn" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    <div class="d-flex justify-content-between align-items-center p-3">
                        <div class="text-muted">Showing {{ lignefactures|length }} of {{ lignefactures|length }} items</div>
                        <nav>
                            <ul class="pagination mb-0">
                                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                            </ul>
                        </nav>
                    </div>
                {% else %}
                    <div class="empty-state">
                        <i class="bi bi-inbox"></i>
                        <h4>No line items found</h4>
                        <p class="text-muted">You haven't created any invoice line items yet.</p>
                        <a href="{{ path('app_lignefacture_new') }}" class="btn btn-primary mt-3">
                            <i class="bi bi-plus-circle me-2"></i> Create Your First Item
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Quick Actions Card -->
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <i class="bi bi-lightning me-2"></i> Quick Actions
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <a href="{{ path('app_lignefacture_new') }}" class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center py-3">
                            <i class="bi bi-plus-circle me-2"></i> Add New Item
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <button class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center py-3">
                            <i class="bi bi-upload me-2"></i> Export Data
                        </button>
                    </div>
                    <div class="col-md-4 mb-3">
                        <button class="btn btn-outline-info w-100 d-flex align-items-center justify-content-center py-3">
                            <i class="bi bi-printer me-2"></i> Print Report
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Add animation to stats cards
        document.addEventListener('DOMContentLoaded', function() {
            const statsCards = document.querySelectorAll('.stats-card');
            statsCards.forEach(card => {
                card.addEventListener('mouseenter', () => {
                    card.style.transform = 'translateY(-8px)';
                });
                card.addEventListener('mouseleave', () => {
                    card.style.transform = 'translateY(0)';
                });
            });
            
            // Simple search functionality
            const searchInput = document.querySelector('.search-bar input');
            if (searchInput) {
                searchInput.addEventListener('keyup', function() {
                    const searchText = this.value.toLowerCase();
                    const rows = document.querySelectorAll('tbody tr');
                    
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        if (text.includes(searchText)) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                });
            }
            
            // Add subtle animation to cards on page load
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 100 + (index * 100));
            });
        });
    </script>
</body>
</html>
{% endblock %}