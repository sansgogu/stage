{% extends "baseadmin.html.twig" %}

{% block body %}
<style>
    :root {
        --primary: #4361ee;
        --secondary: #3f37c9;
        --success: #4cc9f0;
        --light-bg: #f8f9fa;
        --dark-bg: #212529;
        --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        --sidebar-width: 250px;
    }
    
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5f7fb;
        color: #333;
    }
    
    .admin-container {
        display: flex;
        min-height: 100vh;
    }

    /* --- Styles simplifi√©s pour la table et cards --- */
    .dashboard-card {
        background: white;
        border-radius: 12px;
        box-shadow: var(--card-shadow);
        padding: 20px;
        margin-bottom: 25px;
    }
    .product-table thead th {
        background-color: var(--primary);
        color: white;
        border: none;
        padding: 15px 20px;
    }
    .product-table tbody td {
        padding: 15px 20px;
        vertical-align: middle;
    }
    .product-img {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        object-fit: cover;
    }
    .action-btn {
        width: 32px;
        height: 32px;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-right: 5px;
    }
</style>

<div class="dashboard-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h5 mb-0">Product List</h2>
        <a href="{{ path('app_produit_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Add New Product
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover product-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Code</th>
                    <th>Supplier</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                <tr>
                    <td>#{{ produit.id }}</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="{{ asset('image_de_produit/' ~ produit.image) }}" 
                                 class="product-img me-3" alt="{{ produit.titre }}">
                            <div>
                                <div class="fw-medium">{{ produit.titre }}</div>
                                <small class="text-muted">{{ produit.soustitre }}</small>
                            </div>
                        </div>
                    </td>
                    <td>${{ produit.prix }}</td>
                    <td>{{ produit.code }}</td>
                    <td>{{ produit.fournisseur }}</td>
                    <td>
                        {% if produit.categorie %}
                            <a href="{{ path('app_categorie_show', {'id': produit.categorie.id}) }}" 
                               class="badge bg-light text-dark text-decoration-none">
                                {{ produit.categorie }}
                            </a>
                        {% else %}
                            <span class="badge bg-secondary">No Category</span>
                        {% endif %}
                    </td>
                    <td>
                        <span class="badge bg-success">In Stock</span>
                    </td>
                    <td>
                        <div class="d-flex">
                            <a href="{{ path('app_produit_show', {'id': produit.id}) }}" 
                               class="btn btn-sm btn-outline-primary action-btn me-2" title="View">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" 
                               class="btn btn-sm btn-outline-secondary action-btn" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="8" class="text-center py-4">
                        <i class="bi bi-inbox display-4 d-block text-muted mb-2"></i>
                        <span class="text-muted">No products found</span>
                        <div class="mt-3">
                            <a href="{{ path('app_produit_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Add Your First Product
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
