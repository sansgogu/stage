{% extends "baseadmin.html.twig" %}

{% block body %}
<h1>Produit</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ produit.id }}</td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>{{ produit.titre }}</td>
        </tr>
        <tr>
            <th>Soustitre</th>
            <td>{{ produit.soustitre }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ produit.prix }}</td>
        </tr>
        <tr>
            <th>Code</th>
            <td>{{ produit.code }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>
                {% if produit.image %}
                    <img src="{{ asset('image_de_produit/' ~ produit.image) }}" width="70" height="70" alt="{{ produit.titre }}">
                {% else %}
                    <span class="text-muted">No Image</span>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Cat√©gorie</th>
            <td>
                {% if produit.categorie %}
                    <a href="{{ path('app_categorie_show', {'id': produit.categorie.id}) }}">
                        {{ produit.categorie }}
                    </a>
                {% else %}
                    <span class="badge bg-secondary">No Category</span>
                {% endif %}
            </td>
        </tr>
    </tbody>
</table>

<a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Back to list</a>
<a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary">Edit</a>

{# Inclut le formulaire de suppression #}
{{ include('produit/_delete_form.html.twig') }}

{% endblock %}
