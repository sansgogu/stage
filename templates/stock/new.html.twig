
{% extends 'baseadmin.html.twig' %}

{% block title %}New Stock{% endblock %}


{% block body %}

 
 
    <div class="container">
        <!-- Header Section -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="h3 fw-bold"><i class="bi bi-plus-circle me-2"></i>Add New Stock</h1>
                    <p class="mb-0">Create a new stock location in the system</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="{{ path('app_stock_index') }}" class="btn btn-light">
                        <i class="bi bi-arrow-left me-2"></i>Back to list
                    </a>
                </div>
            </div>
        </div>

        <!-- Create Form -->
        <div class="card">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0"><i class="bi bi-building me-2"></i>Stock Information</h5>
            </div>
            <div class="card-body">
                {{ include('stock/_form.html.twig') }}
            </div>
        </div>
    </div>

    <!-- Bootstrap & JavaScript Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{% endblock %}
